{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
	"paths": {
      "@type/*": [
        "src/@types/*"
      ]
    }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"files": true
	}
}
